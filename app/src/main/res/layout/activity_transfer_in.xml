<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.huateng.ebank.ui.account.vm.TransferInViewModel" />

        <variable
            name="viewModel"
            type="TransferInViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tools.view.RxTitle xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rx_title"
            style="@style/CommontRxToolBarStyle"
            app:rxTitle="活期转入" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/InputItemLayout"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <TextView
                        style="@style/InputItemTextView"
                        android:paddingLeft="20dp"
                        android:text="账号"
                        android:textColor="@color/black_text" />

                    <com.huateng.ebank.ui.widget.textview.UniversalInputPro
                        android:id="@+id/tv_account"
                        style="@style/InputItemEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入转入账号"
                        android:text="@={viewModel.accountNoText}" />

                </LinearLayout>

                <LinearLayout style="@style/InputItemLayout">

                    <TextView
                        style="@style/InputItemTextView"
                        android:paddingLeft="20dp"
                        android:text="金额"
                        android:textColor="@color/black_text" />

                    <com.huateng.ebank.ui.widget.textview.UniversalInputPro
                        android:id="@+id/tv_amount"
                        style="@style/InputItemEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="请输入转入金额"
                        android:text="@={viewModel.amountText}" />

                </LinearLayout>


                <com.noober.background.view.BLButton
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/button_margin"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="@dimen/button_margin"
                    android:layout_marginBottom="16dp"
                    android:text="确定"
                    android:textColor="@android:color/white"
                    app:bl_corners_radius="4dp"
                    app:bl_pressed_solid_color="@color/colorBlueDark"
                    app:bl_solid_color="@color/colorBlue"
                    app:bl_unPressed_solid_color="@color/colorBlue"
                    binding:onClickCommand="@{viewModel.transferInClick}" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>

