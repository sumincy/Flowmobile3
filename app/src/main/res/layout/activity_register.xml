<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.huateng.ebank.ui.auth.vm.RegisterModel" />

        <variable
            name="viewModel"
            type="RegisterModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tools.view.RxTitle xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rx_title"
            style="@style/CommontRxToolBarStyle"
            app:rxLeftText="返回"
            app:rxTitle="注册" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <LinearLayout style="@style/InputItemLayout">

                <TextView
                    style="@style/InputItemTextView"
                    android:paddingLeft="20dp"
                    android:text="手机号" />

                <com.huateng.ebank.ui.widget.textview.UniversalInputPro
                    android:id="@+id/tv_telNo"
                    style="@style/InputItemEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="@={viewModel.telNoText}" />

            </LinearLayout>

            <View style="@style/CommonDividerStyle" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/InputItemLayout">

                <TextView
                    style="@style/InputItemTextView"
                    android:paddingLeft="20dp"
                    android:text="验证码" />

                <com.huateng.ebank.ui.widget.textview.UniversalInputPro
                    android:id="@+id/et_vcode"
                    style="@style/InputItemEditText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="@={viewModel.verifyCodeText}" />

                <TextView
                    android:id="@+id/tv_getVerifyCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:enabled="@{viewModel.obtainVerifyCodeEnable.get()}"
                    android:text="@={viewModel.obtainVerifyCodeText}"
                    android:textColor="@color/colorBlue"
                    android:textSize="14sp"
                    binding:onClickCommand="@{viewModel.getVerifyCodeTextClick}" />


            </LinearLayout>

            <View style="@style/CommonDividerStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <CheckBox
                android:id="@+id/ckb_remenberPwd"
                style="@style/CommonCheckBoxTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:text="我已经并同意《条款》"
                android:textColor="@color/gray"
                android:textSize="14sp" />

        </LinearLayout>

        <com.noober.background.view.BLButton
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/button_margin"
            android:layout_marginTop="33dp"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginBottom="33dp"
            android:text="注册"
            android:textColor="@android:color/white"
            app:bl_corners_radius="4dp"
            app:bl_pressed_solid_color="@color/colorBlueDark"
            app:bl_solid_color="@color/colorBlue"
            app:bl_unPressed_solid_color="@color/colorBlue"
            binding:onClickCommand="@{viewModel.registerBtnClick}" />

    </LinearLayout>

</layout>